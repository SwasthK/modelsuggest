{
    "compilerOptions": {
      "target": "es2016",                               
      "module": "commonjs",  
      "declaration": true,
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
  }